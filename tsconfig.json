{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Builds */
    "baseUrl": "./",
    "paths": {
      "@/api/web-container": ["./app/api/web-container/index.ts"],
      "@/logger": ["./app/utils/Logger.ts"],
      "@/utils": ["./app/utils/index.ts"],
      "@/geometry": ["./app/geometry/index.ts"],
      "@/components": ["./app/components/index.ts"],
      "@/view/main": ["./app/pages/main/index.ts"],
      "@/view/race": ["./app/pages/race/index.ts"]
    }
  },
  "include": [
    "app", "container", "main.ts", "async-race.ts"
  ]
}
