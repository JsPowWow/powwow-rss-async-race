{
  "compilerOptions": {
    "target": "ES2016",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Builds */
    "baseUrl": "./",
    "paths": {
      "@/api/web-container": ["./app/api/web-container/index.ts"],
      "@/api/race": ["./app/api/race/index.ts"],
      "@/logger": ["./app/utils/Logger.ts"],
      "@/utils": ["./app/utils/index.ts"],
      "@/geometry": ["./app/geometry/index.ts"],
      "@/components": ["./app/components/index.ts"],
      "@/state-machine": ["./app/stateMachine/index.ts"],
      "@/event-emitter": ["./app/eventEmitter/index.ts"],
      "@/engine": ["./app/engine/index.ts"],
      "@/views/race-scene": ["./app/views/scene/index.ts"],
      "@/pages/main": ["./app/pages/main/index.ts"],
      "@/pages/race": ["./app/pages/raceStandalone/index.ts"],
    }
  },
  "include": [
    "app", "container", "main.ts", "async-race.ts"
  ]
}
